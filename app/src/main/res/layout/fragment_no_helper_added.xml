<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.NoHelperAddedFragment"
    android:background="@drawable/splash_background"
    android:padding="10dp"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_primary"
        android:textAppearance="?textAppearanceSearchResultTitle"
        android:id="@+id/text_view_no_helper_label"
        android:text="Oops! No Helper Found, Please Add One"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="24sp"
        android:textAlignment="center"
        android:drawableTop="@drawable/no_helper_ic"
        android:drawablePadding="8dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_helper"
        android:text="Add Helper"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/text_view_no_helper_label"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>